<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AreaPermainanActivity">

    <RelativeLayout
        android:id="@+id/rl_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_eat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/eat" />

        <ProgressBar
            android:id="@+id/PB_eat"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:max="100"
            android:progress="50" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/iv_eat"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/game" />

        <ProgressBar
            android:id="@+id/PB_play"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PB_eat"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:max="100"
            android:progress="50" />

        <ImageView
            android:id="@+id/iv_sleep"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/sleep" />

        <ProgressBar
            android:id="@+id/PB_sleep"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="20dp"
            android:max="100"
            android:progress="50" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/iv_sleep"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/learn" />

        <ProgressBar
            android:id="@+id/PB_learn"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PB_eat"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="30dp"
            android:max="100"
            android:progress="0" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_progressbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="Semester 1"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="bold"></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/view"
        android:background="@color/black"
        android:layout_below="@+id/tv"
        android:layout_marginTop="10dp">
    </View>

    <TextView
        android:id="@+id/tv_salam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" >
    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avatar"
        android:layout_below="@+id/tv_salam"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>